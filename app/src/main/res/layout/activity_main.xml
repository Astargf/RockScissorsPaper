<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.petrik.rockscissorspaper.MainActivity">


    <ImageView
        android:id="@+id/imageView_human"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/paper"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView_robot"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="87dp"
        app:srcCompat="@drawable/rock"
        android:layout_below="@+id/imageView_human"
        android:layout_alignLeft="@+id/imageView_human"
        android:layout_alignStart="@+id/imageView_human" />

    <TextView
        android:id="@+id/textView_human"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_human"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:text="A te választásod" />

    <TextView
        android:id="@+id/textView_robot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_robot"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:text="A gép választása" />

    <TextView
        android:id="@+id/textView_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eredmény: Ember: 0 Computer:0"
        android:textSize="20dp"
        android:layout_above="@+id/button_rock"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/button_rock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kő"
        android:layout_alignBaseline="@+id/button_paper"
        android:layout_alignBottom="@+id/button_paper"
        android:layout_alignLeft="@+id/textView_score"
        android:layout_alignStart="@+id/textView_score" />

    <Button
        android:id="@+id/button_paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Papír"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/textView_robot"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_scissors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:text="Olló"
        android:layout_alignBaseline="@+id/button_paper"
        android:layout_alignBottom="@+id/button_paper"
        android:layout_toRightOf="@+id/button_paper"
        android:layout_toEndOf="@+id/button_paper" />


</RelativeLayout>
